<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.baidu.mapapi.map.TextureMapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        ></com.baidu.mapapi.map.TextureMapView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            >

            <ImageView
                android:id="@+id/iv_step_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/today_step"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:id="@+id/tv_step_num"
                android:layout_below="@id/iv_step_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"
                android:text="0步"
                />

        </RelativeLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/gray"
            android:layout_marginTop="15sp"
            android:layout_marginBottom="15dp"
            ></View>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            >

            <ImageView
                android:id="@+id/iv_step_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/today_run"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:id="@+id/tv_step_speed"
                android:layout_below="@id/iv_step_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="15dp"
                android:text="0米/分钟"
                android:layout_centerHorizontal="true"
                />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>